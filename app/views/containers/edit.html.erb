<% provide(:title, 'Edit Container') %>
<div id='main-form' class='col-sm-10 col-md-8'>
  <%= bootstrap_form_for @container, url: user_container_path do |f| %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name' %>
    <div id='radio-inputs'>
      <%= f.form_group :position, label: { text: 'Container type' } do %>
        <%= f.radio_button :position, 'Fridge', label: 'Fridge', checked: true %>
        <%= f.radio_button :position, 'Freezer', label: 'Freezer' %>
      <% end %>
    </div>
    <%= f.text_area :description, autofocus: true, autocomplete: 'description', help: "It's optional" %>
    <%= f.submit 'Update', class: 'btn btn-primary' %>
    <div id='sub-info-links'>
      <ul>
        <% if @user.id == current_user.id %>
          <li><%= link_to 'Delete container', user_container_path(@user, @container), method: :delete, data: { confirm: 'You sure?' }, id: 'delete-btn' %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>