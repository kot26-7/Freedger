<% provide(:title, @user.username) %>
<div id='user-profile-form' class='col-sm-10 col-md-8'>
  <h3><%= @user.username %></h3>
  <hr class='my-4'>
  <div id='email-info'>
    <h5>Email: </h5>
    <p><%= @user.email %></p>
  </div>
  <% if @containers.present? %>
    <h5>コンテナ 情報</h5>
    <%= column_chart @data %>
    <%= render partial: 'containers/container_form', collection: @containers %>
  <% end %>
</div>