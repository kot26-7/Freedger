<% provide(:title, 'Edit Product') %>
<div id='main-form' class='col-sm-10 col-md-8'>
  <h3><%= @product.name %></h3>
  <%= bootstrap_form_for @product, url: user_container_product_path do |f| %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name' %>
    <%= f.select :number, [*1..20], {}, {} %>
    <%= f.date_field :product_created_at %>
    <%= f.date_field :product_expired_at %>
    <%= f.text_field :tag_list, autofocus: true, value: @product.tag_list.join(','), help: "It's optional" %>
    <%= f.text_area :description, autofocus: true, autocomplete: 'description', help: "It's optional" %>
    <%= f.file_field :image, help: "It's optional" %>
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
  <div id='sub-info-links'>
    <ul>
      <% if @user.id == current_user.id %>
        <li>
          <%= link_to 'Delete product', user_container_product_path(@user, @container, @product), method: :delete, data: { confirm: 'You sure?' }, id: 'delete-btn' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>