<% provide(:title, 'Create Product') %>
<div id='main-form' class='col-sm-10 col-md-8'>
  <%= bootstrap_form_for @product, url: user_container_products_path do |f| %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name' %>
    <%= f.select :number, [*1..20], {selected: 1}, {} %>
    <%= f.date_field :product_created_at %>
    <%= f.date_field :product_expired_at %>
    <%= f.text_field :tag_list, autofocus: true, value: @product.tag_list.join(','), placeholder: 'hoge, foobar', help: "It's optional" %>
    <%= f.text_area :description, autofocus: true, autocomplete: 'description', help: "It's optional" %>
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>